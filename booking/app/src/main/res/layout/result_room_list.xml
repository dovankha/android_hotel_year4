<com.google.android.material.card.MaterialCardView
    android:layout_marginTop="@dimen/_10pxh"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_410pxh"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#EBFDFB"
    app:cardCornerRadius="@dimen/_15pxh"
    app:strokeWidth="1dp"
    app:strokeColor="#009688"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250pxh"
            android:scaleType="fitXY" />



        <RelativeLayout
            android:layout_below="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/roomname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phu Yen"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phu Yen"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/services"
                android:layout_marginTop="@dimen/_5pxh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_below="@+id/name"
                android:orientation="vertical">
                <LinearLayout android:gravity="start"
                    android:id="@+id/linearRowuser"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:layout_marginStart="@dimen/_1pxh"
                    android:layout_marginTop="@dimen/_13pxv"
                    android:layout_width="wrap_content" android:orientation="horizontal">
                    <ImageView android:id="@+id/imageUser"
                        android:layout_height="@dimen/_10pxh"
                        android:layout_marginBottom="@dimen/_2pxv"
                        android:layout_marginTop="@dimen/_2pxv"
                        android:layout_width="@dimen/_8pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_user"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_user"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtGuestsCounter"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8pxh"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:text="2 Guest(s)"
                        style="@style/txtPoppinsregular10"/>
                </LinearLayout>

                <LinearLayout android:gravity="start"
                    android:id="@+id/linearRowtrash"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:layout_marginTop="@dimen/_2pxv"
                    android:layout_width="wrap_content" android:orientation="horizontal">
                    <ImageView android:id="@+id/imageTrash"
                        android:layout_height="@dimen/_9pxh"
                        android:layout_marginBottom="@dimen/_3pxv"
                        android:layout_marginTop="@dimen/_2pxv"
                        android:layout_width="@dimen/_10pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_trash"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_trash"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txt2TwinBed"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8pxh"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:text="2TwinBed"
                        style="@style/txtPoppinsregular10"/>
                </LinearLayout>
                <LinearLayout android:gravity="start"
                    android:id="@+id/linearRowtrashOne"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:layout_marginStart="@dimen/_1pxh"
                    android:layout_marginTop="@dimen/_2pxv"
                    android:layout_width="wrap_content" android:orientation="horizontal">
                    <ImageView android:id="@+id/imageTrashOne"
                        android:layout_height="@dimen/_10pxh"
                        android:layout_marginBottom="@dimen/_2pxv"
                        android:layout_marginTop="@dimen/_2pxv"
                        android:layout_width="@dimen/_8pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_trash_10x8"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_trash_10x8"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtNoBreakfast"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_9pxh"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:text="NoBreakfast"
                        style="@style/txtPoppinsregular10" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/services"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="@dimen/_6pxv"
                android:orientation="vertical">

                <TextView android:ellipsize="end"
                    android:id="@+id/txtOldPrice"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:layout_marginStart="@dimen/_1pxh"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="$450"
                    style="@style/txtPoppinsitalic10"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtPrice"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:layout_marginStart="@dimen/_1pxh"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="$200"
                    style="@style/txtPoppinsbold20_1"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true">

                <androidx.appcompat.widget.AppCompatButton
                    android:ellipsize="end" android:gravity="center"
                    android:id="@+id/btnChoose"
                    android:layout_height="@dimen/_35pxh"
                    android:layout_width="wrap_content"
                    android:paddingBottom="@dimen/_7pxv"
                    android:paddingEnd="@dimen/_18pxh"
                    android:paddingStart="@dimen/_19pxh"
                    android:paddingTop="@dimen/_7pxv"
                    android:layout_margin="@dimen/_20pxh"
                    android:singleLine="true"
                    android:text="Chon"
                    android:textAllCaps="false"
                    style="@style/btnSolidRounded_2"/>

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

