<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.payment.Payment_method">

    <FrameLayout android:gravity="start"
        android:id="@+id/frameStackrectangle122"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        tools:ignore="MissingConstraints">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageRectangle116"
            android:layout_gravity="start"
            android:layout_height="@dimen/_330pxh"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:background="@color/teal_400"
            app:shapeAppearanceOverlay="@style/rounfimageview"/>

        <LinearLayout
            android:id="@+id/linearColumnarrowleft"
            android:layout_gravity="top|start"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_36pxh"
            android:layout_marginVertical="@dimen/_36pxv"
            android:layout_width="wrap_content"
            android:orientation="vertical">
            <ImageButton
                android:background="@drawable/rectangle_bg_white_a700_radius_15"
                android:id="@+id/back"
                android:layout_gravity="start"
                android:layout_height="@dimen/_30pxh"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_width="@dimen/_30pxh"
                android:paddingHorizontal="@dimen/_9pxh"
                android:paddingVertical="@dimen/_9pxv"
                android:scaleType="fitCenter"
                android:src="@drawable/img_arrowleft_teal_400"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/_30pxh"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/process"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_120pxh"
                android:layout_width="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:ellipsize="end"
                    android:id="@+id/txtGroupNineteen"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingBottom="@dimen/_3pxv"
                    android:paddingEnd="@dimen/_13pxh"
                    android:paddingStart="@dimen/_13pxh"
                    android:paddingTop="@dimen/_5pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_1"
                    style="@style/txtSolidRounded_2"/>

                <View android:background="@color/white_A700"
                    android:id="@+id/viewVectorOne"
                    android:layout_height="@dimen/_1pxv"
                    android:layout_marginBottom="@dimen/_14pxv"
                    android:layout_marginStart="@dimen/_5pxh"
                    android:layout_marginTop="@dimen/_15pxv"
                    android:layout_width="@dimen/_22pxh"/>

                <TextView android:ellipsize="end"
                    android:id="@+id/txtGroupEighteen"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5pxh"
                    android:layout_width="wrap_content"
                    android:paddingBottom="@dimen/_3pxv"
                    android:paddingEnd="@dimen/_11pxh"
                    android:paddingStart="@dimen/_11pxh"
                    android:paddingTop="@dimen/_5pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_2"
                    style="@style/txtSolidRounded_1"/>

                <View android:background="@color/white_A700"
                    android:id="@+id/viewVectorTwo"
                    android:layout_height="@dimen/_1pxv"
                    android:layout_marginBottom="@dimen/_14pxv"
                    android:layout_marginStart="@dimen/_5pxh"
                    android:layout_marginTop="@dimen/_15pxv"
                    android:layout_width="@dimen/_22pxh"/>

                <TextView android:ellipsize="end"
                    android:id="@+id/txtGroupSeventeen"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5pxh"
                    android:layout_width="wrap_content"
                    android:paddingBottom="@dimen/_3pxv"
                    android:paddingEnd="@dimen/_11pxh"
                    android:paddingStart="@dimen/_11pxh"
                    android:paddingTop="@dimen/_5pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_3"
                    style="@style/txtSolidRounded_2"/>
            </LinearLayout>

            <TextView
                android:layout_marginTop="@dimen/_10pxh"
                android:ellipsize="end"
                android:id="@+id/title"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_120pxh"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="Payment Methode"
                android:layout_below="@+id/process"
                style="@style/txtPoppinsbold20_3" />

            <LinearLayout
                android:gravity="start"
                android:id="@+id/checkin_out"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_36pxh"
                android:layout_marginStart="@dimen/_36pxh"
                android:layout_marginTop="@dimen/_15pxv"
                android:layout_width="wrap_content"
                android:layout_below="@+id/title"
                android:orientation="vertical">

                <TextView
                    android:ellipsize="end"
                    android:id="@+id/txtNeermanaHotel"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="Order ID"
                    style="@style/txtPoppinsregular16_1"/>

                <LinearLayout android:gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_width="wrap_content" android:orientation="horizontal">
                    <TextView android:ellipsize="end"
                        android:id="@+id/order_id"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:text="CheckIn"
                        style="@style/txtPoppinsregular12_3"/>

                    <View android:background="@color/white_A700"
                        android:layout_height="@dimen/_1pxv"
                        android:layout_marginBottom="@dimen/_5pxv"
                        android:layout_marginStart="@dimen/_5pxh"
                        android:layout_marginTop="@dimen/_10pxv"
                        android:layout_width="@dimen/_10pxh"/>
                    <TextView
                        android:ellipsize="end"
                        android:id="@+id/txtcheckin"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12pxh"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:text="Thu21 Feb 2023"
                        style="@style/txtPoppinsregular12_3"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:gravity="end"
                android:id="@+id/time"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_15pxv"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_width="wrap_content"
                android:layout_below="@+id/title"
                android:orientation="vertical">

                <TextView
                    android:ellipsize="end"
                    android:id="@+id/finishTime"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="Finish Payment In"
                    style="@style/txtPoppinsregular16_1"/>

                <TextView
                    android:id="@+id/time_pm"
                    style="@style/txtPoppinsregular16_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="00:00:00"
                    android:textSize="15sp" />

            </LinearLayout>


            <LinearLayout
                android:gravity="start"
                android:id="@+id/PremiumDel"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_36pxh"
                android:layout_marginStart="@dimen/_36pxh"
                android:layout_marginTop="@dimen/_15pxv"
                android:layout_width="wrap_content"
                android:layout_below="@+id/checkin_out"
                android:orientation="vertical">

                <TextView
                    android:ellipsize="end"
                    android:id="@+id/title_room"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="Guest detail"
                    style="@style/txtPoppinsregular16_1"/>

                <TextView android:ellipsize="end"
                    android:id="@+id/txtname"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="Xuan Thoai"
                    style="@style/txtPoppinsregular12_3" />
                <TextView android:ellipsize="end"
                    android:id="@+id/txtemail"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="data@demo.cut"
                    style="@style/txtPoppinsregular12_3" />
                <TextView android:ellipsize="end"
                    android:id="@+id/txtdayofbirth"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="Thu21 Feb 2023"
                    style="@style/txtPoppinsregular12_3" />

            </LinearLayout>


        </RelativeLayout>

    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/frameStackrectangle122"
        app:layout_constraintBottom_toTopOf="@+id/linearColumnstartfrom"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:gravity="start"
            android:id="@+id/linearPaymentMethod"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_34pxv"
            android:layout_width="match_parent"
            android:orientation="vertical"
            style="@style/groupStylewhite_A700">

        <TextView android:ellipsize="end"
            android:id="@+id/txtPaymentMethodeOne"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_36pxh"
            android:layout_marginStart="@dimen/_36pxh"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="@string/payment_methode"
            style="@style/txtPoppinsbold20"
            tools:text="@string/payment_methode"/>

        <LinearLayout android:gravity="center_vertical"
            android:id="@+id/linearRowvideocamera"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_36pxh"
            android:layout_marginStart="@dimen/_36pxh"
            android:layout_marginTop="@dimen/_13pxv"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            style="@style/groupStylewhite_3">

            <ImageView android:id="@+id/imageVideocamera"
                android:layout_height="@dimen/_22pxh"
                android:layout_marginBottom="@dimen/_18pxv"
                android:layout_marginStart="@dimen/_32pxh"
                android:layout_marginTop="@dimen/_19pxv"
                android:layout_width="@dimen/_30pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_videocamera_22x30"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_videocamera_22x30"/>

            <TextView android:ellipsize="end"
                android:id="@+id/txtDebitCredit"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_19pxv"
                android:layout_marginEnd="@dimen/_77pxh"
                android:layout_marginStart="@dimen/_66pxh"
                android:layout_marginTop="@dimen/_16pxv"
                android:layout_weight="0.83"
                android:layout_width="0dp"
                android:singleLine="true"
                android:text="@string/lbl_bank_transfer"
                style="@style/txtPoppinsregular16"
                tools:text="@string/msg_debit_credit"/>
        </LinearLayout>

        <LinearLayout android:gravity="start"
            android:id="@+id/linearRowsignal"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_36pxh"
            android:layout_marginStart="@dimen/_36pxh"
            android:layout_marginTop="@dimen/_16pxv"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            style="@style/groupStylewhite_3">

            <ImageView android:id="@+id/imageSignal"
                android:layout_height="@dimen/_30pxh"
                android:layout_marginBottom="@dimen/_15pxv"
                android:layout_marginStart="@dimen/_32pxh"
                android:layout_marginTop="@dimen/_15pxv"
                android:layout_width="@dimen/_24pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_signal_30x24"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_signal_30x24"/>

            <TextView android:ellipsize="end"
                android:id="@+id/txtWebPayment"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_16pxv"
                android:layout_marginEnd="@dimen/_96pxh"
                android:layout_marginStart="@dimen/_90pxh"
                android:layout_marginTop="@dimen/_19pxv"
                android:layout_weight="0.82"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@string/lbl_web_payment"
                style="@style/txtPoppinsregular16"
                tools:text="@string/lbl_web_payment"/>
        </LinearLayout>

        <LinearLayout android:gravity="start"
            android:id="@+id/linearRowairplane"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_36pxh"
            android:layout_marginStart="@dimen/_36pxh"
            android:layout_marginTop="@dimen/_16pxv"
            android:layout_width="match_parent"
            android:orientation="horizontal" style="@style/groupStylewhite_3">
            <ImageView android:id="@+id/imageAirplane"
                android:layout_height="@dimen/_19pxh"
                android:layout_marginBottom="@dimen/_21pxv"
                android:layout_marginStart="@dimen/_32pxh"
                android:layout_marginTop="@dimen/_20pxv"
                android:layout_width="@dimen/_30pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_airplane"
                tools:ignore="ContentDescription" tools:src="@drawable/img_airplane"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtzalo"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_19pxv"
                android:layout_marginEnd="@dimen/_98pxh"
                android:layout_marginStart="@dimen/_87pxh"
                android:layout_marginTop="@dimen/_16pxv"
                android:layout_weight="0.78"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@string/lbl_zalopay"
                style="@style/txtPoppinsregular16"/>
        </LinearLayout>

            <TextView android:ellipsize="end"
                android:id="@+id/txtPayOnCheckin"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_36pxh"
                android:layout_marginStart="@dimen/_36pxh"
                android:layout_marginTop="@dimen/_33pxv"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@string/lbl_pay_on_check_in"
                style="@style/txtPoppinsbold20" tools:text="@string/lbl_pay_on_check_in"/>

            <LinearLayout

                android:gravity="start"
                android:id="@+id/linearRowvideocameraOne"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_36pxh"
                android:layout_marginStart="@dimen/_36pxh"
                android:layout_marginTop="@dimen/_14pxv"
                android:layout_width="match_parent"
                android:orientation="horizontal" style="@style/groupStylewhite_3">

                <ImageView
                    android:id="@+id/imageVideocameraOne"
                    android:layout_height="@dimen/_22pxh"
                    android:layout_marginBottom="@dimen/_19pxv"
                    android:layout_marginStart="@dimen/_32pxh"
                    android:layout_marginTop="@dimen/_19pxv"
                    android:layout_width="@dimen/_30pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_videocamera_1"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_videocamera_1"/>

                <TextView
                    android:ellipsize="end"
                    android:id="@+id/txtPayAtHotel"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_16pxv"
                    android:layout_marginEnd="@dimen/_105pxh"
                    android:layout_marginStart="@dimen/_93pxh"
                    android:layout_marginTop="@dimen/_19pxv"
                    android:layout_weight="0.76"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:text="@string/lbl_pay_at_hotel"
                    style="@style/txtPoppinsregular16" tools:text="@string/lbl_pay_at_hotel"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



    <LinearLayout
        android:gravity="center_horizontal"
        android:id="@+id/linearColumnstartfrom"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5pxv"
        android:layout_width="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/body"
        style="@style/rounfimageview">

        <LinearLayout
            android:id="@+id/linearRowstartfrom"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_36pxh"
            android:layout_marginStart="@dimen/_36pxh"
            android:layout_marginTop="@dimen/_10pxv"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:ellipsize="end"
                android:id="@+id/txtStartFrom"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="StartFrom"
                style="@style/txtPoppinsbold12_2"/>

            <TextView
                android:ellipsize="end"
                android:id="@+id/txtPrice"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_210pxh"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="$200"
                style="@style/txtPoppinsbold12"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/btnChoose"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20pxv"
            android:layout_marginEnd="@dimen/_36pxh"
            android:layout_marginStart="@dimen/_36pxh"
            android:layout_marginTop="@dimen/_16pxv"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_15pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_15pxv"
            android:singleLine="true"
            android:text="Next"
            android:textAllCaps="false"
            style="@style/btnSolidRounded_1"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>