<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.payment.Payment">

    <FrameLayout android:gravity="start"
        android:id="@+id/frameStackrectangle122"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        tools:ignore="MissingConstraints">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageRectangle116"
            android:layout_gravity="start"
            android:layout_height="@dimen/_330pxh"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:background="@color/teal_400"
            app:shapeAppearanceOverlay="@style/rounfimageview"/>

        <LinearLayout
            android:id="@+id/linearColumnarrowleft"
            android:layout_gravity="top|start"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_36pxh"
            android:layout_marginVertical="@dimen/_36pxv"
            android:layout_width="wrap_content"
            android:orientation="vertical">
            <ImageButton
                android:background="@drawable/rectangle_bg_white_a700_radius_15"
                android:id="@+id/back"
                android:layout_gravity="start"
                android:layout_height="@dimen/_30pxh"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_width="@dimen/_30pxh"
                android:paddingHorizontal="@dimen/_9pxh"
                android:paddingVertical="@dimen/_9pxv"
                android:scaleType="fitCenter"
                android:src="@drawable/img_arrowleft_teal_400"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/_30pxh"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/process"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_120pxh"
                android:layout_width="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:ellipsize="end"
                    android:id="@+id/txtGroupNineteen"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingBottom="@dimen/_3pxv"
                    android:paddingEnd="@dimen/_13pxh"
                    android:paddingStart="@dimen/_13pxh"
                    android:paddingTop="@dimen/_5pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_1"
                    style="@style/txtSolidRounded_2"/>

                <View android:background="@color/white_A700"
                    android:id="@+id/viewVectorOne"
                    android:layout_height="@dimen/_1pxv"
                    android:layout_marginBottom="@dimen/_14pxv"
                    android:layout_marginStart="@dimen/_5pxh"
                    android:layout_marginTop="@dimen/_15pxv"
                    android:layout_width="@dimen/_22pxh"/>

                <TextView android:ellipsize="end"
                    android:id="@+id/txtGroupEighteen"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5pxh"
                    android:layout_width="wrap_content"
                    android:paddingBottom="@dimen/_3pxv"
                    android:paddingEnd="@dimen/_11pxh"
                    android:paddingStart="@dimen/_11pxh"
                    android:paddingTop="@dimen/_5pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_2"
                    style="@style/txtSolidRounded_2"/>

                <View android:background="@color/white_A700"
                    android:id="@+id/viewVectorTwo"
                    android:layout_height="@dimen/_1pxv"
                    android:layout_marginBottom="@dimen/_14pxv"
                    android:layout_marginStart="@dimen/_5pxh"
                    android:layout_marginTop="@dimen/_15pxv"
                    android:layout_width="@dimen/_22pxh"/>

                <TextView android:ellipsize="end"
                    android:id="@+id/txtGroupSeventeen"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5pxh"
                    android:layout_width="wrap_content"
                    android:paddingBottom="@dimen/_3pxv"
                    android:paddingEnd="@dimen/_11pxh"
                    android:paddingStart="@dimen/_11pxh"
                    android:paddingTop="@dimen/_5pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_3"
                    style="@style/txtSolidRounded_1"/>
            </LinearLayout>

            <TextView
                android:layout_marginTop="@dimen/_10pxh"
                android:ellipsize="end"
                android:id="@+id/title"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_120pxh"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="Payment Methode"
                android:layout_below="@+id/process"
                style="@style/txtPoppinsbold20_3" />

            <LinearLayout
                android:gravity="start"
                android:id="@+id/checkin_out"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_36pxh"
                android:layout_marginStart="@dimen/_36pxh"
                android:layout_marginTop="@dimen/_15pxv"
                android:layout_width="wrap_content"
                android:layout_below="@+id/title"
                android:orientation="vertical">

                <TextView
                    android:ellipsize="end"
                    android:id="@+id/txtNeermanaHotel"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="Order ID"
                    style="@style/txtPoppinsregular16_1"/>

                <LinearLayout android:gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_width="wrap_content" android:orientation="horizontal">
                    <TextView android:ellipsize="end"
                        android:id="@+id/order_id"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:text="CheckIn"
                        style="@style/txtPoppinsregular12_3"/>

                    <View android:background="@color/white_A700"
                        android:layout_height="@dimen/_1pxv"
                        android:layout_marginBottom="@dimen/_5pxv"
                        android:layout_marginStart="@dimen/_5pxh"
                        android:layout_marginTop="@dimen/_10pxv"
                        android:layout_width="@dimen/_10pxh"/>
                    <TextView
                        android:ellipsize="end"
                        android:id="@+id/txtday"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12pxh"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:text="Thu21 Feb 2023"
                        style="@style/txtPoppinsregular12_3"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:gravity="end"
                android:id="@+id/time"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_15pxv"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_width="wrap_content"
                android:layout_below="@+id/title"
                android:orientation="vertical">

                <TextView
                    android:ellipsize="end"
                    android:id="@+id/finishTime"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="Finish Payment In"
                    style="@style/txtPoppinsregular16_1"/>

                <TextView
                    android:id="@+id/timepm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:textSize="15sp"
                    android:layout_marginEnd="10dp"
                    style="@style/txtPoppinsregular16_1"/>

            </LinearLayout>


            <LinearLayout
                android:gravity="start"
                android:id="@+id/PremiumDel"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_36pxh"
                android:layout_marginStart="@dimen/_36pxh"
                android:layout_marginTop="@dimen/_15pxv"
                android:layout_width="wrap_content"
                android:layout_below="@+id/checkin_out"
                android:orientation="vertical">

                <TextView
                    android:ellipsize="end"
                    android:id="@+id/title_room"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="Guest detail"
                    style="@style/txtPoppinsregular16_1"/>

                <TextView android:ellipsize="end"
                    android:id="@+id/txtname"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="Xuan Thoai"
                    style="@style/txtPoppinsregular12_3" />
                <TextView android:ellipsize="end"
                    android:id="@+id/txtemail"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="data@demo.cut"
                    style="@style/txtPoppinsregular12_3" />
                <TextView android:ellipsize="end"
                    android:id="@+id/txtdayofbirth"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="Thu21 Feb 2023"
                    style="@style/txtPoppinsregular12_3" />

            </LinearLayout>



        </RelativeLayout>

    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/frameStackrectangle122"
        app:layout_constraintBottom_toTopOf="@+id/linearColumnstartfrom"
        tools:ignore="MissingConstraints">

        <LinearLayout android:gravity="start"
            android:id="@+id/linearPayment"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_31pxv"
            android:layout_width="match_parent"
            android:orientation="vertical" style="@style/groupStylewhite_A700">

            <TextView android:ellipsize="end"
                android:id="@+id/txtDebitCredit"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_36pxh"
                android:layout_marginStart="@dimen/_36pxh"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@string/msg_debit_credit"
                style="@style/txtPoppinsbold20"
                tools:text="@string/msg_debit_credit"/>

            <LinearLayout android:gravity="center_horizontal"
                android:id="@+id/linearColumngroupsixteen"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_36pxh"
                android:layout_marginStart="@dimen/_36pxh"
                android:layout_marginTop="@dimen/_16pxv"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/card">
                <EditText
                    android:background="@drawable/rectangle_bg_gray_200_radius_20"
                    android:ellipsize="end"
                    android:hint="Your name"
                    android:id="@+id/name"
                    android:inputType="text"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_16pxh"
                    android:layout_marginStart="@dimen/_16pxh"
                    android:layout_marginTop="@dimen/_16pxv"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_17pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingStart="@dimen/_16pxh"
                    android:paddingTop="@dimen/_18pxv"
                    android:singleLine="true"
                    android:textColorHint="@color/bluegray_400"
                    style="@style/etSolidRounded"
                    tools:ignore="Autofill"/>
                <EditText
                    android:background="@drawable/rectangle_bg_gray_200_radius_20"
                    android:ellipsize="end"
                    android:hint="Card number"
                    android:id="@+id/cardnumber"
                    android:inputType="number"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_16pxh"
                    android:layout_marginStart="@dimen/_16pxh"
                    android:layout_marginTop="@dimen/_16pxv"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_17pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingStart="@dimen/_16pxh"
                    android:paddingTop="@dimen/_18pxv"
                    android:singleLine="true"
                    android:textColorHint="@color/bluegray_400"
                    style="@style/etSolidRounded" tools:ignore="Autofill"/>
                <LinearLayout android:id="@+id/linearRowgroup146"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_16pxh"
                    android:layout_marginStart="@dimen/_16pxh"
                    android:layout_marginTop="@dimen/_16pxv"
                    android:layout_width="match_parent" android:orientation="horizontal">
                    <EditText
                        android:background="@drawable/rectangle_bg_gray_200_radius_20"
                        android:ellipsize="end"
                        android:hint="mm_yy"
                        android:id="@+id/etGroup146"
                        android:inputType="text"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:paddingBottom="@dimen/_18pxv"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingStart="@dimen/_16pxh"
                        android:paddingTop="@dimen/_17pxv"
                        android:singleLine="true"
                        android:textColorHint="@color/bluegray_400"
                        style="@style/etSolidRounded" tools:ignore="Autofill"/>
                    <EditText
                        android:background="@drawable/rectangle_bg_gray_200_radius_20"
                        android:ellipsize="end"
                        android:hint="cvv"
                        android:id="@+id/etGroup147"
                        android:inputType="text"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16pxh"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:paddingBottom="@dimen/_17pxv"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingStart="@dimen/_16pxh"
                        android:paddingTop="@dimen/_18pxv"
                        android:singleLine="true"
                        android:textColorHint="@color/bluegray_400"
                        style="@style/etSolidRounded" tools:ignore="Autofill"/>
                </LinearLayout>
                <LinearLayout android:gravity="start"
                    android:id="@+id/linearRowcheckmark"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_14pxv"
                    android:layout_marginEnd="@dimen/_16pxh"
                    android:layout_marginStart="@dimen/_16pxh"
                    android:layout_marginTop="@dimen/_16pxv"
                    android:layout_width="match_parent" android:orientation="horizontal">
                    <ImageView android:id="@+id/imageCheckmark"
                        android:layout_height="@dimen/_20pxh"
                        android:layout_marginBottom="@dimen/_8pxv"
                        android:layout_marginTop="@dimen/_8pxv"
                        android:layout_width="@dimen/_17pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_checkmark_20x17"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_checkmark_20x17"/>
                    <TextView android:id="@+id/txtThispaymentis"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8pxh"
                        android:layout_weight="0.93"
                        android:layout_width="0dp"
                        android:text="@string/msg_this_payment"
                        style="@style/txtPoppinsregular12_4" tools:text="@string/msg_this_payment"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



    <LinearLayout android:gravity="center_horizontal"
        android:id="@+id/linearColumnstartfrom"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5pxv"
        android:layout_width="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/body"
        style="@style/rounfimageview">

        <LinearLayout android:id="@+id/linearRowstartfrom"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_36pxh"
            android:layout_marginStart="@dimen/_36pxh"
            android:layout_marginTop="@dimen/_10pxv"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView android:ellipsize="end"
                android:id="@+id/txtStartFrom"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="StartFrom"
                style="@style/txtPoppinsbold12_2"/>

            <TextView android:ellipsize="end"
                android:id="@+id/txtPrice"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_240pxh"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="$200"
                style="@style/txtPoppinsbold12"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/btnChoose"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20pxv"
            android:layout_marginEnd="@dimen/_36pxh"
            android:layout_marginStart="@dimen/_36pxh"
            android:layout_marginTop="@dimen/_16pxv"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_15pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_15pxv"
            android:singleLine="true"
            android:text="Pay"
            android:textAllCaps="false"
            style="@style/btnSolidRounded_1"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>